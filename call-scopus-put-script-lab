#!/usr/bin/env bash

d1=$1
d2=$(date -I -d "$d1 + 1 week")

while [ "$d1" != $d2 ]; do
  docker exec gup-imports_gup-imports_1 bash -c 'python3 /data/scripts/put-scopus-docs.py -d /data/files/scopus-normalised/'"$d1"' -u $INDEX_MANAGER_LAB_URL -a $INDEX_MANAGER_LAB_API_KEY' >> /var/tmp/gup-scopus-put-to-gup-admin-index-manager-lab.log
  d1=$(date -I -d "$d1 + 1 day")
done

